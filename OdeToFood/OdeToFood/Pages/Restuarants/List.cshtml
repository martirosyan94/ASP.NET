@page
@model OdeToFood.Pages.Restuarants.ListModel
@{
}
<h1>Restuarants</h1>

<form>
    <input asp-for="SearchTerm" />
    <button> Search </button>
</form>

<table class="table">
    @foreach (var restuarant in Model.Restuarants)
    {
        <tr>
            <td>
                @restuarant.Name
            </td>
            <td>
                @restuarant.Location
            </td>
            <td>
                @restuarant.Cousine
            </td>
            <td>
                <a asp-page="./Detail"
               asp-route-restuarantId=@restuarant.Id>Show details</a>
            </td>
        </tr>
    }
</table>
